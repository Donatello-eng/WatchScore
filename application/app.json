{
  "expo": {
    "name": "WatchScore",
    "slug": "WatchScore",
    "scheme": "watchscore",
    "version": "1.1.2",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#461647"
    },
    "ios": {
      "buildNumber": "11",
      "bundleIdentifier": "com.bumpgames.watchscore",
      "supportsTablet": true,
      "infoPlist": {
       "NSCameraUsageDescription": "Allow WatchScore to use the camera so you can scan your watch and generate a detailed report on its model, materials, movement, and estimated value.",
       "NSPhotoLibraryUsageDescription": "Allow WatchScore to access your photo library so you can import watch photos and generate a detailed report on their model, materials, movement, and estimated value."
      }
    },
    "android": {
      "versionCode": 11,
      "package": "com.bumpgames.watchscore",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundImage": "./assets/adaptive-icon-back.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "plugins": [
      "expo-dev-client",
      "expo-font", 
      "expo-router"
    ]
  }
}